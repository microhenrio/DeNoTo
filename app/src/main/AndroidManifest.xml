<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.octar.apps.denoto">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /><!-- permite hacer discovery y cambiar settings -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" /><!-- solo acepta dispositivos con hardware de BLE -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.octar.apps.denoto.MainActivity" />
        </activity>
        <activity
            android:name=".DeviceScanActivity"
            android:theme="@style/AppTheme"
            android:label="@string/title_DeviceScan"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.octar.apps.denoto.MainActivity" />
        </activity>
        <activity
            android:name=".DeviceControlActivity"
            android:theme="@style/AppTheme"
            android:label="@string/title_DeviceControl"
            android:parentActivityName=".DeviceScanActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.octar.apps.denoto.DeviceScanActivity" />
        </activity>
        <service
            android:name=".BluetoothLeService"
            android:enabled="true" />
    </application>

</manifest>